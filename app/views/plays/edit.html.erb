<h1>Edit Play</h1>
<%= simple_form_for @play, html: {multipart: true} do |f| %>
  <%= f.select :category_id, @categories%>
  <%= f.input :title, label: "Play Title" %>
  <%= f.input :director %>
  <%= f.input :description %>
  <%= f.input :play_img, as: :file %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back", plays_path %>

