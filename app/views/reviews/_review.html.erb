<div class="row">
	<div class="col-md-10">
		<div class="review">
			<h3><%= review.rating %></h3>
			<p class="review-comment"><%= review.comment %></p>
			<% if user_signed_in? %>
				<% if current_user.id == review.user_id %>
					<div class="links btn-group">
					<%= link_to "Edit", edit_play_review_path(params[:id],review.id), class: 'btn btn-custom' %> 
					<%= link_to "Delete", play_review_path(params[:id],review.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-custom' %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>